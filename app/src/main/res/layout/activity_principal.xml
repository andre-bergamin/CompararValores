<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.andre.comparavalores.PrincipalActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1ª Opção"
        android:id="@+id/textViewOpcao1"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textViewOpcao2"
        android:layout_alignStart="@+id/textViewOpcao2"
        android:textSize="30dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextValor1"
        android:layout_below="@+id/textViewOpcao1"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:singleLine="true"
        android:inputType="numberDecimal"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/editTextValor1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mL"
        android:id="@+id/textView2"
        android:layout_below="@+id/textViewOpcao1"
        android:layout_centerHorizontal="true"
        android:textSize="25dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextMl1"
        android:singleLine="true"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:inputType="numberDecimal"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2ª Opção"
        android:id="@+id/textViewOpcao2"
        android:layout_marginTop="41dp"
        android:textSize="30dp"
        android:layout_below="@+id/editTextValor1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$"
        android:id="@+id/textView3"
        android:layout_below="@+id/textViewOpcao2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextValor2"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:layout_above="@+id/buttonComparar"
        android:layout_alignLeft="@+id/editTextValor1"
        android:layout_alignStart="@+id/editTextValor1"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mL"
        android:id="@+id/textView4"
        android:layout_below="@+id/textViewOpcao2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:textSize="25dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextMl2"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:textSize="25dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Comparar"
        android:id="@+id/buttonComparar"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/editTextMl2"
        android:layout_centerHorizontal="true"
        android:background="#03b609"
        android:textColor="#ffffff"
        android:textSize="20dp" />
</RelativeLayout>